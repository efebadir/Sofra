<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSepetUrun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/textViewSepetUrunToplam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="5 ₺"
                android:textColor="@color/green"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imageViewSepetResim"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/imageButtonClose"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/django" />

            <TextView
                android:id="@+id/textViewSepetUrunAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Ayran"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewSepetResim"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewSepetUrunFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="5 ₺"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/imageViewSepetResim"
                app:layout_constraintTop_toBottomOf="@+id/textViewAdet" />

            <ImageButton
                android:id="@+id/imageButtonClose"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:background="@drawable/closebutton"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewSepetResim"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageViewSepetResim"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/close" />

            <TextView
                android:id="@+id/textViewAdet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Adet: 3"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewSepetResim"
                app:layout_constraintTop_toBottomOf="@+id/textViewSepetUrunAd" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
